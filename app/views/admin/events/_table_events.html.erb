<h1>Events</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Location</th>
        <th scope="col">Start Date</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <% @events.all.each_with_index do | event, index | %>
      <tr>
        <th scope="row"><%=index%></th>
        <td><%= event.title %></td>
        <td><%= event.location %></td>
        <td><%= event.start_date %></td>
        <td><%= event.validated %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure to delete this event?' }, class:"btn btn-danger" %></td>
        <td><%= button_to 'Validate', event_path(event), method: :patch, data: { confirm: 'Are you sure to confirm this event?' }, class: "btn btn-success" %></td>
        <td><%= button_to 'Reject', event_path(event), method: :patch, data: { confirm: 'Are you sure? to confimr this event' }, class: "btn btn-warning" %></td>
    </tr>
  </table>
<% end %>
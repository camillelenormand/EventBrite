<%= form_with(model: event) do |form| %>
  <!-- 2 column grid layout with text inputs for the first and last names -->
  <div class="row mb-4">
    <div class="col">

  <!-- Title input -->
      <div class="form-outline">
        <%= form.text_field :title, class: "form-control" %>
        <%= form.label :title, class: "form-label" do %>
          Title
        <% end %>
      </div>
    </div>
    <div class="col">

  <!-- Location input -->
      <div class="form-outline">
        <%= form.text_field :location, class: "form-control" %>
        <%= form.label :location, class: "form-label" do %>
          Location
        <% end %>
      </div>
    </div>
  </div>

  <!-- Description input -->
  <div class="form-outline mb-4">
    <%= form.text_field :description,  class: "form-control" %>
    <%= form.label :description, class: "form-label" do %>
      Description
    <% end %>
  </div>

  <!-- Price input -->
  <div class="form-outline mb-4">
    <%= form.number_field :price, class: "form-control" %>
    <%= form.label :price, class: "form-label" do %>
      Price
    <% end %>
  </div>

    <!-- DateTime input -->
  <div class="form-outline mb-4">
    <%= form.datetime_local_field :start_date, class: "form-control" %>
    <%= form.label :start_date, class: "form-label" do %>
      Starting Date
    <% end %>
  </div>

    <!-- Duration input -->
  <div class="form-outline mb-4">
    <%= form.number_field :duration, class: "form-control" %>
    <%= form.label :duration, class: "form-label" do %>
      Duration (in minutes) 
    <% end %>
  </div>

  <!-- Admin Id -->
  <div class="form-outline mb-4">
    <%= form.hidden_field :admin_id, value: current_user.id %> 
  </div>

  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.submit class: "btn btn-primary btn-block mb-4" %>
  </div>
<% end %>


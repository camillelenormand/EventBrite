<p style="color: green"><%= notice %></p>
  <%= link_to "Edit this event", edit_event_path(@event) %> |
  <%= link_to "Back to events", events_path %>
  <%= render @event %>
  <div class="container p-4">
      <%= button_to "Reserve a spot", checkout_create_path(total: @event.price), class: "btn btn-primary", data: {turbo: false} %><br>
      <%= button_to "Delete this event", @event, method: :delete, class:"btn btn-danger " %>
  </div>
